@page "/debt"
@inject NavigationManager NavigationManager


<style>
    .container {
        display: flex;
        height: 100vh;
    }

    .menu {
        background-color: #2c3e50;
        color: white;
        width: 250px;
        display: flex;
        flex-direction: column;
        padding: 20px;
    }

        .menu div {
            font-size: 1.5rem;
            margin-bottom: 20px;
        }

        .menu a {
            color: white;
            text-decoration: none;
            font-size: 1rem;
            margin: 10px 0;
            padding: 10px;
            border-radius: 4px;
            transition: background-color 0.3s ease;
        }

            .menu a:hover {
                background-color: #34495e;
            }

    .content {
        flex: 1;
        background-color: #e8f5e9;
        padding: 20px;
    }

    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .header h1 {
            font-size: 2rem;
        }

    .total-balance {
        background-color: #2ecc71;
        color: white;
        padding: 10px 20px;
        border-radius: 4px;
        font-size: 1rem;
    }

    .table-section {
        margin-top: 20px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        background-color: #d5e8d4;
        border-radius: 8px;
        overflow: hidden;
    }

        table th,
        table td {
            text-align: left;
            padding: 10px;
            border: 1px solid #b4c7b4;
        }

        table th {
            background-color: #2ecc71;
            color: white;
        }

    .add-button {
        margin-top: 20px;
        padding: 10px 20px;
        background-color: #2ecc71;
        color: white;
        border: none;
        border-radius: 4px;
        font-size: 1rem;
        cursor: pointer;
    }

        .add-button:hover {
            background-color: #27ae60;
        }
</style>

<div class="container">
    <!-- Menu -->
    <div class="menu">
        <div>Menu</div>
        <a href="/dashboard">Dashboard</a>
        <a href="/inflow">Cash Inflow</a>
        <a href="/outflow">Cash Outflow</a>
        <a href="/debt" class="active">Debt</a>
    </div>

    
    <div class="content">
        <div class="header">
            <h1>Debt</h1>
            <div class="total-balance">Total Balance: $0</div>
        </div>
        <div class="table-section">
            <table>
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Type</th>
                        <th>Tags</th>
                        <th>Amount</th>
                        <th>Notes</th>
                    </tr>
                </thead>
                <tbody>
                    
                </tbody>
            </table>
            <button class="add-button" @onclick="NavigateToAdd">Add</button>
        </div>
    </div>
</div>

@code {
    private void NavigateToAdd()
    {
        NavigationManager.NavigateTo("/debtadd");
    }
}
