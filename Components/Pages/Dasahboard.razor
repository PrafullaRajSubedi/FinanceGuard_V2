@page "/dashboard"
@using FinanceGuard.Models
@using FinanceGuard.Services
@inject IUserService userService
@inject NavigationManager navigationManager


<style>
    body {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
    }

    .container {
        display: flex;
        height: 100vh;
    }

    .menu {
        background-color: #2c3e50;
        color: white;
        width: 250px;
        display: flex;
        flex-direction: column;
        padding: 20px;
    }

        .menu div {
            font-size: 1.5rem;
            margin-bottom: 20px;
        }

        .menu a {
            color: white;
            text-decoration: none;
            font-size: 1rem;
            margin: 10px 0;
            padding: 10px;
            border-radius: 4px;
            transition: background-color 0.3s ease;
        }

            .menu a:hover {
                background-color: #34495e;
            }

    .content {
        flex: 1;
        background-color: #e8f5e9;
        padding: 20px;
    }

    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .header h1 {
            font-size: 2rem;
        }

    .total-balance {
        background-color: #2ecc71;
        color: white;
        padding: 10px 20px;
        border-radius: 4px;
        font-size: 1rem;
    }

    .stats {
        display: flex;
        gap: 20px;
        margin: 20px 0;
    }

    .stat-box {
        background-color: #2ecc71;
        color: white;
        padding: 20px;
        border-radius: 8px;
        flex: 1;
        text-align: center;
        font-size: 1.2rem;
    }

    .table-section {
        margin-top: 20px;
    }

        .table-section h2 {
            margin-bottom: 10px;
            font-size: 1.5rem;
        }

    table {
        width: 100%;
        border-collapse: collapse;
        background-color: #d5e8d4;
        border-radius: 8px;
        overflow: hidden;
    }

        table th,
        table td {
            text-align: left;
            padding: 10px;
            border: 1px solid #b4c7b4;
        }

        table th {
            background-color: #2ecc71;
            color: white;
        }

    .menu a:hover {
        background-color: #34495e;
    }

    /* Highlight for the currently active page */
    .menu a.active {
        background-color: #27ae60;
        font-weight: bold;
    }
</style>

<div class="container">
    <!-- Menu -->
    <div class="menu">
        <div>Menu</div>
        <a href="/dashboard"class="active">Dashboard</a>
        <a href="/inflow">Cash Inflow</a>
        <a href="/outflow">Cash Outflow</a>
        <a href="/debt">Debt</a>
    </div>

    <!-- Dashboard content -->
    <div class="content">
        <!-- Header -->
        <div class="header">
            <h1>Dashboard</h1>
            <div class="total-balance">Total Balance: $0</div>
        </div>

        <!-- Stats-->
        <div class="stats">
            <div class="stat-box">Total Inflows: $0</div>
            <div class="stat-box">Total Outflows: $0</div>
            <div class="stat-box">Pending Debts: $0</div>
        </div>

        <!-- Transactions Table -->
        <div class="table-section">
            <h2>Transactions</h2>
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Date</th>
                        <th>Type</th>
                        <th>Tags</th>
                        <th>Amount</th>
                        <th>Notes</th>
                    </tr>
                </thead>
                <tbody>
                    
                </tbody>
            </table>
        </div>
    </div>
</div>


